# ==========================================
# Clinomic Platform v3 - Environment Config
# ==========================================
# Copy this file to .env.v3 and fill in the values
# Usage: cp .env.v3.example .env.v3

# ==========================================
# Django Backend Settings
# ==========================================
DEBUG=True
APP_ENV=dev
DJANGO_SECRET_KEY=
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# Database (PostgreSQL)
# ==========================================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=clinomic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ==========================================
# JWT Authentication
# ==========================================
JWT_SECRET_KEY=
JWT_REFRESH_SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==========================================
# MFA Settings
# ==========================================
MFA_REQUIRED_ROLES=ADMIN,DOCTOR

# ==========================================
# PHI Encryption (Fernet)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ==========================================
MASTER_ENCRYPTION_KEY=

# ==========================================
# Audit Logging
# ==========================================
AUDIT_SIGNING_KEY=

# ==========================================
# CORS Settings
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# ML Engine
# ==========================================
ML_EXECUTOR_WORKERS=4

# ==========================================
# Frontend Settings
# ==========================================
VITE_API_URL=http://localhost:8000

# ==========================================
# Gunicorn (Production)
# ==========================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
